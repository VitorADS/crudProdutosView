{% extends 'base.html.twig' %}

{% block title %}Produtos{% endblock %}

{% block body %}
    <a href="{{ path('app_product_create') }}"><button class="btn btn-secondary">Criar</button></a>
    <table class="table table-dark table-striped border border-black mt-4 text-center">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Quantidade</th>
                <th>Valor</th>
                <th>Acoes</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td># {{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.quantity }}</td>
                    <td>{{ product.price }}</td>
                    <td>
                        <a href="{{ path('app_product_edit', {productId: product.id}) }}"><button class="btn btn-primary btn-sm">E</button></a>
                        <a href="{{ path('app_product_remove', {productId: product.id}) }}"><button class="btn btn-danger btn-sm">X</button></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
